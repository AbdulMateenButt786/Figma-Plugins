{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Profile current",
      "program": "${relativeFileDirname}\\${fileBasenameNoExtension}.js",
      "preLaunchTask": "tsc: build - tsconfig.profile.json",
      "sourceMaps": true,
      "smartStep": true,
      "cwd": "${workspaceFolder}\\profiling",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "TS_NODE_BASEURL":"./profiling"
      },
      "runtimeArgs": [
        "-r",
        "tsconfig-paths/register",
        "--experimental-modules",  
      "--inspect-brk=9229"]
  },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug tests",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "test",
        "--",
        "--inspect-brk=9229"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug transformer tests",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "test",
        "--",
        "--inspect-brk=9229"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/token-transformer",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}