{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "profiling",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noEmit": false
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/node_modules",
    "./storybook",
    "storybook-static"
  ],
  "include": [
    "css.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}